extends layout

block content
	if error
		.message
			span= error
	if result
		.message
			span= result
	.user-split
		include profile.jade
		
		#settings
			h1= repo.name
			form#repos(action='/account/' + repo.name, method='post', name='settings')
				label(for='enabled') CI enabled
				input(type='checkbox', id='enabled', name='enabled', checked=repo.isWebHookEnabled())
				//input(name='asd')
				each type in [{type: 'branch', name: 'Branches'}, {type: 'tag', name: 'Tags'}]
					- var subset = _.where(doclets, {type: type.type}) 
					if subset.length > 0
						h4= type.name
						each doclet in subset
							span= doclet.name
							label(for=doclet.name) published
							input(type='checkbox', id=doclet.name, name=doclet.name, checked=!doclet.muted)= doclet.name

				input(type='submit', value='submit')
