extends layout.jade


block title
	title Doclets
	meta(name='description', content='The easiest way to publish JSDoc Javascript documentation. The new home for API-Docs.')

block content
	.hero
		.background
		h1.ui.icon.header
			img.icon.logo(src='logo.svg')
			.content Doclets
				.ui.sub.header No excuses

		p The easiest way to publish Javascript Docs
		.social
			a.twitter-share-button(href='https://twitter.com/share', data-text='No Excuses. The easiest way to publish #JSDoc #javascript #api #documentation!', data-via='doclets_io', data-size='large')
			script#twitter-script
					!function(d,s,id,sid){var js,fjs=d.getElementById(sid),p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+'://platform.twitter.com/widgets.js';console.log('insert', js, fjs); fjs.parentNode.insertBefore(js,fjs);}}(document, 'script', 'twitter-wjs', 'twitter-script');
			iframe(allowtransparency='true', name='github-star', scrolling='no', frameborder='0', style='border: none; height: 28px; width: 110px;', src='https://buttons.github.io/buttons.html#href%3Dhttps%3A%2F%2Fgithub.com%2Flipp%2Fdoclets%26text%3DStar%26data.count.api%3D%2Frepos%2Flipp%2Fdoclets%23stargazers_count%26data.count.href%3D%2Flipp%2Fdoclets%2Fstargazers%26data.count.aria.label%3D%23%20stargazers%20on%20GitHub%26data.style%3Dmega%26data.icon%3Docticon-star%26aria.label%3DStar%20lipp%2Fdoclets%20on%20GitHub')
				
		.ui.list
			.item
				i.icon.check.circle
				.content Beautiful &amp; Clear
			.item
				i.icon.check.circle
				.content GitHub Integration
			.item
				i.icon.check.circle
				.content Tags and Branches
			.item
				i.icon.check.circle
				.content Free for Open Source
		if !user
			.login
				a.ui.huge.button.primary#get-started(href='/auth/github') 
					i.github.icon
					.wrap
						span Login with
						| GitHub
		.stats
			.ui.two.tiny.inverted.statistics
				.ui.statistic
					.value= docletsCount
					.label Doclets
				.ui.statistic
					.value= usersCount
					.label Users
		.info 
			span Doclets.io is in alpha phase. 
			span Please report issues or give feedback <a href="https://github.com/lipp/doclets/issues">here</a>.


	#samples.ui.vertical.segment
		.ui.container
			#diagram
				.ui.grid
					.center.aligned.row
						.column.sixteen.wide
							span.ui.black.big.label
								i.icon.code.text
								strong JSDoc
							i.icon.plus
							span.ui.black.big.label
								i.icon.file.text
								strong Markdown
							i.icon.plus
							span.ui.black.big.label
								i.icon.file.text.outline
								strong .doclets.yml
					.center.aligned.row
						.column.sixteen.wide
							#cloud
								i.huge.angle.double.down.icon

			#screenshots
				a.img-api(href='/lipp/ScrollMagic/add-to-doclets')
					img.ui.big.circular2.bordered.image(src='doclets_screen_api.png')
				a.img-md(href='/lipp/ScrollMagic/add-to-doclets/about')
					img.ui.big.circular2.bordered.image(src='doclets_screen_md.png')

	//.ui.vertical.segment#highlights
		h1.ui.center.aligned.header
			span#with-doclets
			span &nbsp; Doclets
			span#what
			span#thats-doc


	//#quotes.ui.vertical.segment
		.ui.container
			.ui.three.columns.equal.height.stackable.grid
				.center.aligned.row
					.column
						h1.ui.center.aligned.header
							a(href='https://twitter.com/kentcdodds/status/703261574731988992')
								blockquote(cite='https://twitter.com/kentcdodds/status/703261574731988992') Looks swell. Gotta try it ...
						.author 
							a(href='https://twitter.com/kentcdodds') Kent C. Dodds
						.company 
							a(href='https://www.paypal.com') PayPal
					.column
						h1.ui.center.aligned.header
							a
								blockquote(cite='https://gitter.im/lipp/doclets?utm_source=badge&utm_medium=badge&utm_campaign=pr-badge&utm_content=badge') We are always struggling to keep our code documented
						.author 
							a(href='https://github.com/Cinezaster') Cinezaster
						.company 
							a(href='http://www.appsaloon.be') AppSaloon
					.column
						h1.ui.center.aligned.header
							a
								blockquote(cite='https://twitter.com/beriberikix/status/704558519433846784') Pretty neat JSDoc CI
						.author 
							a(href='https://twitter.com/beriberikix/') Jonathan Beri
						.company 
							a(href='http://www.google.com/about/company') Google Inc.
	
	#ads.ui.vertical.segment
		.ui.container
			.ui.equal.width.stackable.internally.celled.grid
				.center.aligned.row
					.column
						h1.ui.header.hero-header
							span.underline API-Doc is important
						span.punch Now it's also easy!
						p Doclets.io is the missing <strong>hosted and automated API-Doc generation service for Javascript</strong>. By 
							| simplifying API-Doc setup it enables you to actually <em>focus on writing documentation</em>!
						p Doclets.io <strong>automatically creates API-Doc</strong> for <strong>every tag and <em>selected</em> branches</strong>, supporting <a href="http://usejsdoc.org">JSDoc</a> comments and <a href='https://daringfireball.net/projects/markdown/'>Markdown</a> articles.
					.column.focus
						.ui.list
							.item
								.hero-icon
									i.huge.middle.aligned.icon.ban
										i.big.middle.aligned.icon.trash
								span.dont Don't spam your repository 
								span.else with a truckload of HTML/CSS files for your API-Doc. <br> One simple configuration file is enough.
							.item 
								.hero-icon
									i.huge.middle.aligned.icon.ban
										i.big.middle.aligned.icon.question
								span.dont Don't waste time 
								span.else with build-systems to add API-Doc generation. <br> Just two clicks to add your repository.
							.item 
								.hero-icon
									i.huge.middle.aligned.icon.ban
										i.big.middle.aligned.icon.student
								span.dont Don't sweat 
								span.else about release management of your API-Doc. <br> Tags and <em>selected</em> branches are auto-published.

			
		

	
	.ui.vertical.segment
		.ui.container
			h1.ui.centered.header.hero-header 
				span Getting started
			.ui.two.column.middle.aligned.stackable.grid
				.ui.column
					//.ui.ordered.relaxed.huge.list
						.item Login with GitHub
						.item Add a repository
						.item Create a <em>.doclets.yml</em> file
						.item Push
					.ui.small.fluid.vertical.ordered.steps
						.step
							.content
								.title 
									i.icon.github
									| Login with GitHub
								.description Doclets.io needs permissions to install a webhook
						.step
							.content
								.title 
									i.icon.plus
									| Add Repository
								.description The source must be <a href='http://usejsdoc.org'>JSDoc</a> commented
						.step
							.content
								.title 
									//.doclets.yml
									i.icon.code 
									| .doclets.yml
								.description Create a simple <a href='/doclets.yml'>configuration file</a>
						.step
							.content
								.title 
									i.icon.cloud.upload
									| Push
								.description Commit and push your changes
						//.step
							.content
								.title 
									i.icon.check
									| Ready
								.description Let Doclets.io automatically create documentation


				.ui.column
					.ui.embed(data-url='https://youtube.com/embed/V87knrNqT0k')

	.ui.vertical.segment
		.ui.container
			.recents
				h1.ui.centered.header.hero-header 
					span Newest Doclets
				.ui.three.stacked.stackable.cards
					each docletParams in doclets
						- var doclet = docletParams.doclet
						.card
							.content
								a.header(href=doclet.getDocletUrl())= doclet.repo
									.meta
										span= doclet.version
		
								.description= doclet.getDescription()
									br
									a(href=doclet.getRepoUrl()) all versions
							.extra.content
								span Published #{moment(doclet.createdAt).fromNow()} 
									a.right.floated(href=doclet.owner) by&nbsp;
										span= doclet.owner
										if doclet._owner.image
											img.ui.image(src=doclet._owner.image)
	
