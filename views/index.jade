extends layout.jade
block content
	.ui.container		
		.hero
			h1.ui.icon.header
				i.setting.icon
				.content Doclets
					.ui.sub.header Automated API Docs

			p Automated documentation generation for Javascript
			.ui.list
				.item
					i.icon.green.checkmark
					.content JSDoc
				.item
					i.icon.green.checkmark
					.content GitHub Integration
				.item
					i.icon.green.checkmark
					.content Tags and Branches
			if !user
				.login
					a.ui.huge.button.primary#get-started(href='/auth/github') 
						i.github.icon
						.wrap
							span Login with
							| GitHub

						
	
		//#highlights
			ul
				li
					h3 Automated
					p Automatically built and published docs for 
						| <strong>tags</strong> and selectable <strong>branches</strong>  
				li
					h3 Hosted
					p Free hosting at doclets.io for all of your projects.
						| Don't mess around with domains and servers any more!
	  
				li 
					h3 Hassle-free
					p A super simple configuration file lets you add <em>Javascript</em> and <em>Markdown</em> files
						| to your documentation
	
		.recents
			h3.ui.dividing.header recently updated doclets
			.ui.three.stacked.cards
				each docletParams in doclets
					- var doclet = docletParams.doclet
					.card
						.content
							.header
								a(href=doclet.getDocletUrl())= doclet.repo
								.meta
									span= doclet.version
	
							.description= doclet.getDescription()
								br
								a(href=doclet.getRepoUrl()) all versions
						.extra.content
							span Published #{moment(doclet.createdAt).fromNow()} by&nbsp;
								a(href=doclet.owner)= doclet.owner
	
